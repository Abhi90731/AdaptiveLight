{
  "manifest_version": 3,
  "name": "Eye Protector",
  "description": "Smartly adjusts screen warmth based on time, content, and screen activity.",
  "version": "1.3",
  "permissions": ["scripting", "tabs", "activeTab", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
